// shiny blue theme color
base-color = #0E3C56
base-color-normal = #1C79AE
base-color-dark = #1A6F9F
base-color-light = #218ECB

// custom style on specific ui elements

// form
.form-landing-page
  margin-top: 30px
  .form-control
    border-radius: 0px

// button
.btn-brim
  background-color: base-color-normal
  border-radius: none
  border-radius: 0px
  color: #fff
  font-family: muliregular, Helvetica, Arial
  text-shadow: 0 1px 0 rgba(0, 0, 0, .1)
  &:hover
  &:focus
    background-color: base-color-dark
    color: @color



// page layout and other styling
.header-navigation
  background: url('../img/furley_bg.png')
  .brand
    color: base-color-dark
    font-family: pt_sans_narrowbold, Helvetica, Arial
    letter-spacing: -1px
    margin: 20px 0
    cursor: pointer

.brand-inline
  font-weight: bold
  text-transform: capitalize

.main
  font-family: open_sansregular
  .main-header
    text-align: center
  .main-content
    p
    ol
      color: #737373
    p:first-child
      color: #555
      font-size: 1.3em
    ol
      list-style: none
      li
        position: relative
      .list-stub
        background-color: base-color-light
        position: absolute
        top: 8px
        left: -12px
        width: 5px
        height: 5px

.footer
  color: rgba(4, 19, 28, 0.3)
  font-size: 0.9em
  margin-top: 90px
  .footer-inner
    border-top: 1px solid @color
    padding: 5px 0
    a
      color: inherit
      font-size: 1.6em
      &:hover
      &:focus
        color: base-color-light